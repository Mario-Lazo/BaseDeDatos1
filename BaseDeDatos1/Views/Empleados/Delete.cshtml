@model BaseDeDatos1.Models.EmpleadosModel

@{
    ViewBag.Title = "Eliminar tipo de cambio";
}

<h2>Eliminar tipo de cambio</h2>

<h3>¿Está seguro de que desea eliminar la informacion?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.EmpleadoID</dd>

        <dt class="col-sm-2">Edad</dt>
        <dd class="col-sm-10">@Model.Edad</dd>

        <dt class="col-sm-2">Departamento</dt>
        <dd class="col-sm-10">@Model.Departamento</dd>

        <dt class="col-sm-2">Fecha de Contratación</dt>
        <dd class="col-sm-10">@Model.FechaContratacion?.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EmpleadoID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
