@model BaseDeDatos1.Models.EmpleadosModel

@{
    ViewBag.Title = "Editar tipo de cambio";
}

<h2>Editar Tipo de cambio</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="EmpleadoID" />

    <div class="form-group">
        <label class="control-label">Moneda Origen</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Moneda destino</label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Tasa de cambio</label>
        <input asp-for="Departamento" class="form-control" />
        <span asp-validation-for="Departamento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Fecha</label>
        <input asp-for="FechaContratacion" type="date" class="form-control" />
        <span asp-validation-for="FechaContratacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
